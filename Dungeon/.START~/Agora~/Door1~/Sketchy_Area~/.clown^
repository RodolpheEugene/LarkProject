#!/bin/bash
T_C=$(tput setaf 6)
T_R=$(tput sgr0)
LP=3

printf "\n\n"
echo "The clown you saw on the wall is standing right in front of you and approching you fast."
sleep 1
printf "\n\n"
echo "At first the clown did not recognize that you were in the same room as him, but you accidentally made a noise."
sleep 1
printf "\n\n"
echo "Now the clown is on high alert because he knows there is someone else in this room with him."
sleep 1
printf "\n\n"
echo "You're trying to hide yourself the best you can, but the clown discovered your hinding spot."
sleep 1
