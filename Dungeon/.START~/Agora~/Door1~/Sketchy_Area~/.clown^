echo "Since you retrieved a weapon from earlier. You can use it to defend yourself against your enemy."
sleep 1
printf "\n\n"
echo "You only have 3 LifePoints. Be careful with your actions."
sleep 1
printf "\n"

read -p "Do you want to attack the clown? [y/n]: " fight
  if [[ $fight = "Y" || $fight = "y" ]];
    then
      echo " "
      sleep 1
      echo "The clown did not see where your first attack came from and seem stunned. "
      echo " "
until [[ $LP -eq 0 ]]
  do
    read -p "Do you want to attack again: " $fight
    ((LP=LP-1))
  echo " "
    echo "Your LIFEPOINT is: " $LP
  done
		sleep 2
