#!/bin/bash
Bold=$(tput bold)
Norm=$(tput sgr0)
Yellow='\033[1;33m'
NC='\033[0m'

echo -e "${Yellow}
           ,o.          8 8
          d   bzzzzzzzza8o8b
           \`o'              
${NC}\n"

IFS= read -r -p "ENTER THE KEY: " key

	if [[ $key != "Oracle of Delphi" ]] 
		then
		echo -e "YOU NEED A KEY TO ENTER THIS DOOR!\n"
		sleep 1
		
	else	
	echo -e "\nCONGRATS!\n\nYOU HAVE EARNED A ${Bold}SHEILD${Norm}!\nADD IT TO YOUR INVENTORY!\n"
	sleep 1
	fi

